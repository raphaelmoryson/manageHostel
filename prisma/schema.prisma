generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id              Int       @id @default(autoincrement())
  details         String
  pickupAddress   String
  deliveryAddress String
  status          Status
  deliveryDate    DateTime?
  driver          Driver?   @relation(fields: [driverId], references: [id])
  driverId        Int?
  createdAt       DateTime  @default(now())
  weight          String
  dimensions      String
  quantity        String
  // invoice         Invoice?
}

model Vehicle {
  id           Int           @id @default(autoincrement())
  licensePlate String        @unique
  type         String
  capacity     Float
  maintenance  Maintenance[]
}

model Driver {
  id     Int     @id @default(autoincrement())
  name   String
  role   String
  orders Order[]
}


model Customer {
  id      Int    @id @default(autoincrement())
  name    String
  address String
}

model Maintenance {
  id        Int      @id @default(autoincrement())
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id])
  vehicleId Int
  date      DateTime
  details   String
}

model Invoice {
  id              Int      @id @default(autoincrement())
  invoiceNumber   String // Invoice number
  issuanceDate    DateTime // Date of issuance
  dueDate         DateTime // Due date
  customerName    String // Customer name
  customerAddress String // Customer address
  customerCity    String? // Customer city
  customerZipCode String // Customer ZIP code
  amountExclTax   Float // Amount excluding tax
  amountVAT       Float // VAT amount
  amountInclTax   Float // Total amount including tax
  paymentStatus   String // Payment status
  priceList       Json // List of prices
  dateList        Json // List of dates
  pickupList      Json // List of pickups
  deliveryList    Json // List of deliveries
  referenceList   Json // List of references
  createdBy       String // Created by (user name)
  // order           Order?   @relation(fields: [orderId], references: [id])
  orderId         Int?     @unique
}

enum Role {
  ADMIN
  DRIVER
  CUSTOMER
}

enum Status {
  IN_PROGRESS
  DELIVERED
  CANCELED
}
